<%- include('../partials/header.ejs') %>


<div class="container" style='min-height: 100vh;'>
	
    <div class="row col-lg-8 col-md-8 mx-auto">
        <h1 class='text-center col-lg-12 col-md-12'>Edit <%= campground.name %></h1>
        <div style="margin: 25px auto;" class="col-lg-12 col-md-12">
            <form action="/campgrounds/<%= campground._id %>/edit?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="upcamp[name]" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="upcamp[image]" value='<%= campground.image %>'>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="upcamp[description]" value='<%= campground.description %>'>
                </div>
				<div class="form-group">
				<input class="form-control" type="number" name="upcamp[price]" value="<%= campground.price %>" min='0.01' step='0.01'>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Back to Campgrounds</a>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %> 