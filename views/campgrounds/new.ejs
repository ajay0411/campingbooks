<%- include('../partials/header.ejs') %>


<div class="container" style='min-height: 100vh;'>
    <div class="row col-lg-8 col-md-8 mx-auto">
        <h1 class='text-center col-lg-12 col-md-12' id='headingg'>Create a New Campground</h1>
        <div style="margin: 25px auto;" class="col-lg-12 col-md-12">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="description">
                </div>
				<div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="Price per Night" min='0.01' step='0.01'>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Back to Campgrounds</a>
        </div>
    </div>
</div>	
	
	
