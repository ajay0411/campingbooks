<%- include('../partials/header.ejs') %>


<div class="container" style='min-height: 100vh;'>
    <div class="row col-lg-8 col-md-8 mx-auto">
        <h1 class='text-center col-lg-12 col-md-12'>Add a comment to <%= campground.name %></h1>
        <div style="margin: 25px auto;" class="col-lg-12 col-md-12">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Back to Campgrounds</a>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %> 